$color-1= #021b47

html
  height 100%


//                COMMONS

#registration
    body
      min-height 100%

    h1, h2, h3
        font-weight: normal;
        font-family: $font-title
        color: $color-1

    p, .text, .subtitle, .title, .name, .job, a
        color $color-1

    button
        cursor pointer
        color white
        font-family $font-title
        border 0px

    body
        display: flex
        align-items: center
        justify-content: center
        padding 20px 0px
        .overlay
            position: fixed
            left 0
            top 0
            z-index: -1
            width: 100%
            height 100%
            background: linear-gradient(135deg, #fea22d, #f06292 85%)
        .window
            background: url(../images/registration-window-back.png)
            width: 100%
            max-width: 500px
            padding 20px 60px 15px 60px
            min-height: 745px
            border-radius: 12px
            header
                text-align center
