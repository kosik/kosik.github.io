$color-1= #021b47

html
  height inherit
body
  height inherit

//                COMMONS


h1, h2, h3
    font-weight: normal;
    font-family: $font-title
    color: $color-1

p, .text, .subtitle, .title, .name, .job, a
    color $color-1

button
    cursor pointer
    color white
    font-family $font-title
    border 0px

body
    background: linear-gradient(135deg, #fea22d, #f06292 85%)
    display: flex
    align-items: center
    justify-content: center
    padding 20px 0px

    .window
        background: white
        width: 100%
        max-width: 500px
        min-height: 745px
        border-radius: 12px
