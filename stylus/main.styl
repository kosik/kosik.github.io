$color-1= #06bcd4
$color-2= #f5f5f5
$color-3= #dcecee

html
  height 100%
body
  height 100%

//                COMMONS


h1, h2, h3
    font-weight: normal;
    font-family: $font-title

button
    cursor pointer
    color white
    font-family $font-title
    border 0px

section
    &.regular
        padding 90px 0px
    h1, h2
        text-align center
        font-size: 72px
    .subtitle
        text-align center
        font-size 30px
        font-family: $font-regular

#first
    .width-wrapper
        max-width: 600px
    header
        padding 20px 0px
        .logo
            flex: 1
        .menu
            flex: 1
            .width-wrapper
                display: flex
                justify-content: space-between;
                align-items: center
            a
                margin: 0
                display: block;
                font-family: $font-bold
            img
                margin: 0
                display: block
            // ul
            //     li
            //         display: inline-block;
    .about-container
        justify-content: center;
        align-items: center;
        padding: 140px 0px 90px 0px
    .about
        flex: 1
        h1
            margin-bottom 60px
        p
            font-size 24px
            margin-bottom 20px
        button
            margin-top 40px
            font-size 28px
    .mesh
        flex: 1
        text-align: center

#second
    background: #021b47

#seventh
    background: url(../images/back-footer.jpg) no-repeat center
    background-size: cover;
    text-align center
    h2
        color: white
        margin-bottom 60px
    button
        min-width: 450px
        min-height 85px
        font-size 28px
        background url(../images/bee-buttons.png) no-repeat
        background-position 0px -286px

footer
    background: #021b47
    padding 60px 0px
    color white
    .flex
        align-items: center
    .logo
        padding-right: 40px
    .copyright
        padding-right 20px
        font-family: $font-roboto-regular
    .menu
        flex 1
        .width-wrapper
            display: flex
            max-width: 450px
            margin-right: 0px
            justify-content: space-between;
        a
            margin: 0
            display: block;
            font-family: $font-bold

// common

.slider-rows-multiple
    img
        max-width: 100%

.bee-button
    min-width: 290px
    min-height 55px
    font-size 36px
    background url(../images/bee-buttons.png) no-repeat
    background-position 0px 0px
